<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal"
    android:layout_width="fill_parent" 
    android:layout_height="wrap_content" >
   
    
	<RelativeLayout
	android:id="@+id/RL"
	android:layout_width="wrap_content"
	android:layout_height="wrap_content"
	>
	


	    
 	    <!-- 상대방 사진 -->
    <ImageView
	android:id="@+id/eOppoPhoto"
	android:layout_alignParentLeft="true"
  	android:layout_below="@+id/eLabel"
  	android:layout_marginLeft="4dip"
    android:layout_width="35.3dip"
    android:layout_height="35.3dip"
    android:src="@drawable/no_profileimage" />
 	
  	<!-- 상대방 채팅 -->
    <TextView
    android:id="@+id/eOppoChat"
    android:layout_toRightOf="@+id/eOppoPhoto"
    android:layout_marginTop="12dip"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="@drawable/talk_message_balloon"
    android:textColor="#000000"
    android:maxWidth="200dip"
    android:textSize="14sp" />
	  
   	
 	<!--  상대방 시간 -->
   	<TextView
	android:id="@+id/eOppoTime"
	android:layout_toRightOf="@+id/eOppoChat"
	android:layout_alignParentBottom="true"
	android:paddingBottom="5dip"
	android:layout_marginLeft="0dip"
	android:text=""
	android:textColor="#444444"
	android:textSize="9sp"
	android:gravity="left"
	android:layout_width="wrap_content"
	android:layout_height="wrap_content" />
   	
    

		    
    <!-- 내 채팅 -->
    <TextView
    android:id="@+id/eMyChat"
    android:layout_alignParentRight="true"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="@drawable/talk_my_message_balloon"
    android:textColor="#000000"
    android:maxWidth="200dip"
    android:textSize="14sp" />
		    
	    
    <!-- 내 시간 -->
    <TextView
	android:id="@+id/eMyTime"
	android:layout_toLeftOf="@+id/eMyChat"
	android:layout_alignParentBottom="true"
	android:paddingBottom="18dip"
	android:layout_marginRight="0dip"
	android:text=""
	android:textColor="#444444"
	android:textSize="9sp"
	android:gravity="right"
	android:layout_width="wrap_content"
	android:layout_height="wrap_content" />
    
    
    
    </RelativeLayout>
  
	    	    <View
	android:layout_width="fill_parent"
	android:layout_height="10dip"
	        />
  
</LinearLayout>