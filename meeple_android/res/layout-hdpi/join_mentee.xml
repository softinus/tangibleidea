<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:orientation="vertical"
    android:background="@drawable/join_bg_01">

    	<RelativeLayout
		android:id="@+id/RelativeLayout01"
		android:layout_width="fill_parent"
		android:layout_height="fill_parent">


    	    
    	<EditText	
    	android:id="@+id/edt_id"
    	android:hint="영문/숫자 4~12글자"
    	android:maxLength="12"
    	android:singleLine="true"
    	android:layout_width="200dip"
    	android:layout_height="wrap_content"
    	android:layout_marginTop="50dip"
    	android:layout_centerHorizontal="true"
    	></EditText>
    	
    	<TextView
    	android:id="@+id/txt_id"
    	android:text="ID"
    	    	android:textSize="18sp"
    	android:layout_marginRight="15dip"
    	android:textColor="#000000"
    	android:layout_toLeftOf="@+id/edt_id"
    	android:layout_marginTop="60dip"
    	android:layout_width="wrap_content"
    	android:layout_height="wrap_content"
    	/>
    	
    	
<!--     	<TextView -->
<!--     	android:id="@+id/txt_pw" -->
<!--     	android:text="패스워드" -->
<!--     	android:layout_width="50dip" -->
<!--     	android:layout_height="wrap_content" -->
<!--     	>    	     -->
<!--     	</TextView> -->
    	
    	<EditText	
    	android:id="@+id/edt_pw"
    	android:hint="영문/숫자 4~12글자"
    	android:maxLength="12"
    	android:password="true"
    	android:singleLine="true"
    	android:layout_width="200dip"
    	android:layout_height="wrap_content"
    	android:layout_marginTop="0dip"
    	android:layout_below="@+id/edt_id"
    	android:layout_centerHorizontal="true"
    	></EditText>
    	
    	<TextView
    	android:id="@+id/txt_pw"
    	android:text="PW"
    	android:textSize="18sp"
    	android:layout_marginLeft="10dip"
    	android:layout_marginTop="10dip"
    	android:layout_marginRight="15dip"
    	android:textColor="#000000"
    	android:layout_below="@+id/edt_id"
    	android:layout_toLeftOf="@+id/edt_pw"
    	android:layout_width="wrap_content"
    	android:layout_height="wrap_content"
    	/>
    	
    	<EditText	
    	android:id="@+id/edt_name"
    	android:maxLength="10"
    	android:hint="이름 입력"
    	android:singleLine="true"
    	android:layout_width="200dip"
    	android:layout_height="wrap_content"
    	android:layout_marginTop="0dip"
    	android:layout_below="@+id/edt_pw"
    	android:layout_centerHorizontal="true"
    	></EditText>

    	<TextView
    	android:id="@+id/txt_name"
    	android:text="이름"
    	android:textSize="18sp"
    	android:layout_marginLeft="10dip"
    	android:layout_marginTop="10dip"
    	android:layout_marginRight="15dip"
    	android:textColor="#000000"
    	android:layout_below="@+id/edt_pw"
    	android:layout_toLeftOf="@+id/edt_pw"
    	android:layout_width="wrap_content"
    	android:layout_height="wrap_content"
    	/>
    	        
		<EditText	
    	android:id="@+id/edt_email"
    	android:hint="E-mail 입력"
    	android:singleLine="true"
    	android:layout_width="200dip"
    	android:layout_height="wrap_content"
    	android:layout_marginTop="0dip"
    	android:inputType="textEmailAddress"
    	android:layout_below="@+id/edt_name"
    	android:layout_centerHorizontal="true"
    	></EditText>
		
		    	<TextView
    	android:id="@+id/txt_email"
    	android:text="이메일"
    	android:textSize="18sp"
    	android:layout_marginLeft="10dip"
    	android:layout_marginTop="10dip"
    	android:layout_marginRight="15dip"
    	android:textColor="#000000"
    	android:layout_below="@+id/edt_name"
    	android:layout_toLeftOf="@+id/edt_name"
    	android:layout_width="wrap_content"
    	android:layout_height="wrap_content"
    	/>
    	            
		<EditText	
    	android:id="@+id/edt_school"
    	android:hint="학교 입력"
    	android:singleLine="true"
    	android:layout_width="200dip"
    	android:layout_height="wrap_content"
    	android:layout_marginTop="0dip"
    	android:layout_below="@+id/edt_email"
    	android:layout_centerHorizontal="true"
    	></EditText>
		
				    	<TextView
    	android:id="@+id/txt_school"
    	android:text="학교"
    	android:textSize="18sp"
    	android:layout_marginLeft="10dip"
    	android:layout_marginTop="10dip"
    	android:layout_marginRight="15dip"
    	android:textColor="#000000"
    	android:layout_below="@+id/edt_email"
    	android:layout_toLeftOf="@+id/edt_name"
    	android:layout_width="wrap_content"
    	android:layout_height="wrap_content"
    	/>
    	                
		<EditText	
    	android:id="@+id/edt_grade"
    	android:hint="학년 입력"
    	android:maxLength="1"
    	android:singleLine="true"
    	android:numeric="decimal"
    	android:layout_width="200dip"
    	android:layout_height="wrap_content"
    	android:layout_marginTop="0dip"
    	android:layout_below="@+id/edt_school"
    	android:layout_centerHorizontal="true"
    	></EditText>
		<TextView
    	android:id="@+id/txt_school"
    	android:text="학년"
    	android:textSize="18sp"
    	android:layout_marginLeft="10dip"
    	android:layout_marginTop="10dip"
    	android:layout_marginRight="15dip"
    	android:textColor="#000000"
    	android:layout_below="@+id/edt_school"
    	android:layout_toLeftOf="@+id/edt_school"
    	android:layout_width="wrap_content"
    	android:layout_height="wrap_content"
    	/>
		
		<Spinner
   	    android:id="@+id/spn_gender"
   	    android:layout_width="200dip"
   	    android:layout_height="wrap_content"
   	    android:entries="@array/gender"
   	    android:layout_below="@+id/edt_grade"
   		android:layout_centerHorizontal="true"
   	    />
		
		<TextView
    	android:id="@+id/txt_gender"
    	android:text="성별"
    	android:textSize="18sp"
    	android:layout_marginLeft="10dip"
    	android:layout_marginTop="10dip"
    	android:layout_marginRight="15dip"
    	android:textColor="#000000"
    	android:layout_below="@+id/edt_grade"
    	android:layout_toLeftOf="@+id/edt_grade"
    	android:layout_width="wrap_content"
    	android:layout_height="wrap_content"
    	/>
		
		<Spinner
		android:id="@+id/spn_category"
		android:layout_width="200dip"
    	android:layout_height="wrap_content"
    	android:entries="@array/category"
    	android:layout_below="@+id/spn_gender"
    	android:layout_centerHorizontal="true"
		/>
		
				<TextView
    	android:id="@+id/txt_gender"
    	android:text="멘토링"
    	android:textSize="18sp"
    	android:layout_marginTop="10dip"
    	android:layout_marginRight="15dip"
    	android:textColor="#000000"
    	android:layout_below="@+id/spn_gender"
    	android:layout_toLeftOf="@+id/spn_gender"
    	android:layout_width="wrap_content"
    	android:layout_height="wrap_content"
    	/>
    	                    
		<Button
		android:id="@+id/btn_join"
		android:text="가입하기"
		android:layout_width="200dip"
    	android:layout_height="wrap_content"
    	android:layout_below="@+id/spn_category"
    	android:layout_centerHorizontal="true"
		>
		    
		</Button>
		    

    		    
    		    
    	</RelativeLayout>
    

</LinearLayout>