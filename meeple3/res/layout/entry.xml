<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal"
    android:layout_width="fill_parent" 
    android:layout_height="wrap_content" >
   
	<RelativeLayout
	android:id="@+id/RelativeLayout01"
	android:layout_width="wrap_content"
	android:layout_height="wrap_content">
    
    
	<TextView
	android:id="@+id/eLabel"
	android:text="나와 대화중인 멘티"
	android:textSize="16sp"
	android:gravity="center"
	android:background="#223366"
	android:layout_width="fill_parent"
	android:layout_height="wrap_content" />
  
  	<ImageView android:id="@+id/ePhoto"
  	android:layout_below="@+id/eLabel"
    android:layout_width="48dip"
    android:layout_height="48dip"
    android:src="@drawable/no_profileimage" />

    
    <TextView
    android:id="@+id/eName"
    android:layout_toRightOf="@+id/ePhoto"
    android:layout_below="@+id/eLabel"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:textColor="#000000"
    android:textSize="22sp" />
    
    <TextView
    android:id="@+id/eSchool"
    android:layout_toRightOf="@+id/ePhoto"
    android:layout_below="@+id/eName"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:textColor="#000000"
    android:textSize="16sp" />
  
  </RelativeLayout>
  
</LinearLayout>