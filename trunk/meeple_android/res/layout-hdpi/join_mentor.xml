<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:orientation="vertical"
    android:background="@drawable/join_bg_01">

    	<RelativeLayout
		android:id="@+id/RelativeLayout01"
		android:layout_width="fill_parent"
		android:layout_height="fill_parent">

<!--     	<TextView -->
<!--     	android:id="@+id/txt_id" -->
<!--     	android:text="아이디" -->
<!--     	android:layout_width="50dip" -->
<!--     	android:layout_height="wrap_content" -->
<!--     	>    	     -->
<!--     	</TextView> -->
    	    
    	<EditText
    	    android:id="@+id/edt_id"
    	    android:layout_width="200dip"
    	    android:layout_height="wrap_content"
    	    android:layout_centerHorizontal="true"
    	    android:layout_marginTop="50dip"
    	    android:hint="영문,숫자 4~12글자"
    	    android:maxLength="12"
    	    android:singleLine="true" >
</EditText>
    	
    	    	<TextView
    	android:id="@+id/txt_id"
    	android:text="ID"
    	android:textSize="18sp"
    	android:layout_marginLeft="10dip"
    	android:layout_marginRight="5dip"
    	android:textColor="#000000"
    	android:layout_toLeftOf="@+id/edt_id"
    	android:layout_marginTop="60dip"
    	android:layout_width="wrap_content"
    	android:layout_height="wrap_content"
    	/>
    	
<!--     	<TextView -->
<!--     	android:id="@+id/txt_pw" -->
<!--     	android:text="패스워드" -->
<!--     	android:layout_width="50dip" -->
<!--     	android:layout_height="wrap_content" -->
<!--     	>    	     -->
<!--     	</TextView> -->
    	
    	<EditText
    	    android:id="@+id/edt_pw"
    	    android:layout_width="200dip"
    	    android:layout_height="wrap_content"
    	    android:layout_below="@+id/edt_id"
    	    android:layout_centerHorizontal="true"
    	    android:layout_marginTop="0dip"
    	    android:hint="영문,숫자 4~12글자"
    	    android:maxLength="12"
    	    android:password="true"
    	    android:singleLine="true" >
</EditText>
    	
    	    	<TextView
    	android:id="@+id/txt_pw"
    	android:text="PW"
    	android:textSize="18sp"
    	android:layout_marginLeft="10dip"
    	android:layout_marginTop="10dip"
    	android:layout_marginRight="5dip"
    	android:textColor="#000000"
    	android:layout_below="@+id/edt_id"
    	android:layout_toLeftOf="@+id/edt_pw"
    	android:layout_width="wrap_content"
    	android:layout_height="wrap_content"
    	/>
    	
    	<EditText	
    	android:id="@+id/edt_name"
    	android:hint="이름 입력"
    	android:maxLength="10"
    	android:singleLine="true"
    	android:layout_width="200dip"
    	android:layout_height="wrap_content"
    	android:layout_marginTop="0dip"
    	android:layout_below="@+id/edt_pw"
    	android:layout_centerHorizontal="true"
    	></EditText>
    	
    	    	<TextView
    	android:id="@+id/txt_name"
    	android:text="이름"
    	android:textSize="18sp"
    	android:layout_marginLeft="10dip"
    	android:layout_marginTop="10dip"
    	android:layout_marginRight="5dip"
    	android:textColor="#000000"
    	android:layout_below="@+id/edt_pw"
    	android:layout_toLeftOf="@+id/edt_pw"
    	android:layout_width="wrap_content"
    	android:layout_height="wrap_content"
    	/>


    	        
		<EditText	
    	android:id="@+id/edt_email"
    	android:hint="올바른 형식의 E-Mail"
    	android:singleLine="true"
    	android:maxLength="30"
    	android:layout_width="200dip"
    	android:layout_height="wrap_content"
    	android:layout_marginTop="0dip"
    	android:layout_below="@+id/edt_name"
    	android:layout_centerHorizontal="true"
    	></EditText>
		
				    	<TextView
    	android:id="@+id/txt_email"
    	android:text="이메일"
    	android:textSize="18sp"
    	android:layout_marginLeft="10dip"
    	android:layout_marginTop="10dip"
    	android:layout_marginRight="5dip"
    	android:textColor="#000000"
    	android:layout_below="@+id/edt_name"
    	android:layout_toLeftOf="@+id/edt_name"
    	android:layout_width="wrap_content"
    	android:layout_height="wrap_content"
    	/>
    	            
		<EditText	
    	android:id="@+id/edt_major"
    	android:hint="한글로 입력"
    	android:singleLine="true"
    	android:maxLength="20"
    	android:layout_width="200dip"
    	android:layout_height="wrap_content"
    	android:layout_marginTop="0dip"
    	android:layout_below="@+id/edt_email"
    	android:layout_centerHorizontal="true"
    	></EditText>
		
						    	<TextView
    	android:id="@+id/txt_major"
    	android:text="전공"
    	android:textSize="18sp"    	
    	android:layout_marginLeft="10dip"
    	android:layout_marginTop="10dip"
    	android:layout_marginRight="5dip"
    	android:textColor="#000000"
    	android:layout_below="@+id/edt_email"
    	android:layout_toLeftOf="@+id/edt_name"
    	android:layout_width="wrap_content"
    	android:layout_height="wrap_content"
    	/>
    	
    	<EditText	
    	android:id="@+id/edt_promo"
    	android:hint="4글자 입력 ex) 2009"
    	android:maxLength="4"
    	android:singleLine="true"
    	android:numeric="decimal"
    	android:layout_width="200dip"
    	android:layout_height="wrap_content"
    	android:layout_marginTop="0dip"
    	android:layout_below="@+id/edt_major"
    	android:layout_centerHorizontal="true"
    	></EditText>
    	
    			<TextView
    	android:id="@+id/txt_promo"
    	android:text="학번"
    	android:textSize="18sp"
    	android:layout_marginLeft="10dip"
    	android:layout_marginTop="10dip"
    	android:layout_marginRight="5dip"
    	android:textColor="#000000"
    	android:layout_below="@+id/edt_major"
    	android:layout_toLeftOf="@+id/edt_major"
    	android:layout_width="wrap_content"
    	android:layout_height="wrap_content"
    	/>
    	
    			
    					<TextView
    	android:id="@+id/txt_gender"
    	android:text="성별"
    	android:textSize="18sp"
    	android:layout_marginLeft="10dip"
    	android:layout_marginTop="10dip"
    	android:layout_marginRight="5dip"
    	android:textColor="#000000"
    	android:layout_below="@+id/edt_promo"
    	android:layout_toLeftOf="@+id/edt_promo"
    	android:layout_width="wrap_content"
    	android:layout_height="wrap_content"
    	/>
		
    	<Spinner
   	    android:id="@+id/spn_gender"
   	    android:layout_width="200dip"
   	    android:layout_height="wrap_content"
   	    android:entries="@array/gender"
   	    android:layout_below="@+id/edt_promo"
   		android:layout_centerHorizontal="true"
   	    />
    	                    
		<Button
		android:id="@+id/btn_join"
		android:text="가입하기"
		android:layout_width="200dip"
    	android:layout_height="wrap_content"
    	android:layout_below="@+id/spn_gender"
    	android:layout_centerHorizontal="true"
		>
		    
		</Button>
		    

    		    
    		    
    	</RelativeLayout>
    

</LinearLayout>