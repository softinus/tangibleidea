<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#E6E6E6"
    android:orientation="vertical" >
    
  <ImageView
      android:id="@+id/img_top"
      android:layout_width="fill_parent"
      android:layout_height="wrap_content"
      android:background="@drawable/setting_label_bg" >
      
  </ImageView>
  
    <ImageView
      android:id="@+id/img_top_title"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:src="@drawable/setting_label_text_01_my_profile" >
      
  </ImageView>
  
  <Button 
      android:id="@+id/btn_profile_edit"
      android:background="@drawable/button_edit"
      android:layout_alignParentRight="true"
      android:paddingRight="10dip"
      android:layout_marginRight="10dip"
      android:layout_marginTop="10dip"
      android:layout_below="@+id/img_top"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      />
  
    <Button 
      android:id="@+id/btn_profile_confirm"
      android:background="@drawable/button_confirm"
      android:layout_alignParentRight="true"
      android:layout_marginRight="70dip"
      android:layout_marginTop="10dip"
      android:layout_below="@+id/img_top"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:visibility="invisible"
      />
    
        <Button 
      android:id="@+id/btn_profile_cancel"
      android:background="@drawable/button_cancel"
      android:layout_alignParentRight="true"
      android:paddingRight="10dip"
      android:layout_marginRight="10dip"
      android:layout_marginTop="10dip"
      android:layout_below="@+id/img_top"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:visibility="invisible"
      />
  
    <ImageView
      android:id="@+id/img_profile_image"
      android:src="@drawable/no_profileimage"
      android:layout_below="@+id/img_top"
      android:layout_marginTop="10dip"
      android:layout_marginLeft="10dip"
      android:layout_width="72dip"
      android:layout_height="72dip">      
  </ImageView>

        <ImageView
      android:id="@+id/img_profile_id"
      android:src="@drawable/setting_subtitle_01"
      android:layout_below="@+id/img_top"
      android:layout_toRightOf="@+id/img_profile_image"
      android:layout_marginTop="10dip"
      android:layout_marginLeft="10dip"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content">      
  </ImageView>
  
        
	<TextView
      android:id="@+id/txt_profile_id"
      android:layout_below="@+id/img_profile_id"
      android:text="AccountID"
      android:lines="1"
      android:layout_toRightOf="@+id/img_profile_image"
      android:layout_marginTop="3dip"
      android:layout_marginLeft="10dip"
      android:textColor="#000000"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content">      
  </TextView>
  
	        <ImageView
      android:id="@+id/img_profile_email"
      android:src="@drawable/setting_subtitle_02"
      android:layout_below="@+id/txt_profile_id"
      android:layout_toRightOf="@+id/img_profile_image"
      android:layout_marginTop="10dip"
      android:layout_marginLeft="10dip"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content">      
  </ImageView>
 
 <TextView
      android:id="@+id/txt_profile_email"
      android:layout_below="@+id/img_profile_email"
      android:text="E-Mail"
      android:lines="1"
      android:layout_toRightOf="@+id/img_profile_image"
      android:layout_marginTop="3dip"
      android:layout_marginLeft="10dip"
      android:textColor="#000000"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content">      
  </TextView>
  
     <ImageView
      android:id="@+id/img_base_profile_title"
      android:src="@drawable/setting_subtitle_03"
      android:layout_below="@+id/img_profile_image"
      android:layout_marginTop="10dip"
      android:layout_marginLeft="10dip"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content">      
  </ImageView>
  
          <ImageView
      android:id="@+id/img_base_profile_bg"
      android:background="@drawable/set_profile_text"
      android:layout_below="@+id/img_base_profile_title"
      android:layout_marginTop="10dip"
      android:layout_marginLeft="10dip"
      android:paddingRight="10dip"
      android:layout_marginRight="10dip"
      android:layout_width="fill_parent"
      android:layout_height="90dip">      
  </ImageView>
  
          <!-- 1구분선 -->
          <View 
              android:background="#AAAAAA"
              android:layout_width="fill_parent"
              android:layout_height="0.3dip"
              android:layout_below="@+id/img_base_profile_title"
              android:layout_marginTop="40dip"
      		  android:layout_marginLeft="10dip"
      		  android:layout_marginRight="10dip"
              />
          
          <!-- 2구분선 -->
              <View 
              android:background="#AAAAAA"
              android:layout_width="fill_parent"
              android:layout_height="0.3dip"
              android:layout_below="@+id/img_base_profile_title"
              android:layout_marginTop="70dip"
      		  android:layout_marginLeft="10dip"
      		  android:layout_marginRight="10dip"
              />
              
              <ImageView 
              android:id="@+id/txt_set1"
              android:src="@drawable/text_img_set_01"
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:layout_below="@+id/img_base_profile_title"
              android:layout_marginTop="10dip"
              android:layout_marginLeft="10dip"
              />
              
               <ImageView 
              android:id="@+id/txt_set2"
              android:src="@drawable/text_img_set_02"
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:layout_below="@+id/img_base_profile_title"
              android:layout_marginTop="40dip"
              android:layout_marginLeft="10dip"
              />
               
              <ImageView 
              android:id="@+id/txt_set3"
              android:src="@drawable/text_img_set_03"
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:layout_below="@+id/img_base_profile_title"
              android:layout_marginTop="70dip"
              android:layout_marginLeft="10dip"
              />
              
              <EditText
                  android:id="@+id/ edt_set1"
                  android:layout_width="300dip"
                  android:layout_height="wrap_content"
                  android:layout_below="@+id/img_base_profile_title"
                  android:layout_marginLeft="10dip"
                  android:layout_marginTop="18dip"
                  android:layout_toRightOf="@+id/txt_set1"
                  android:background="#00000000"
                  android:text="멘티"
                  android:maxLength="10"
      			  android:lines="1"
                  android:textSize="14sp" />
              
              <EditText
                  android:id="@+id/ edt_set2"
                  android:layout_width="300dip"
                  android:layout_height="wrap_content"
                  android:layout_below="@+id/img_base_profile_title"
                  android:layout_marginLeft="10dip"
                  android:layout_marginTop="48dip"
                  android:layout_toRightOf="@+id/txt_set2"
                  android:background="#00000000"
                  android:text="학교이름"
                  android:maxLength="20"
      			  android:lines="1"
                  android:textSize="14sp" />
              
              <EditText 
              android:id="@+id/ edt_set3"
              android:layout_below="@+id/img_base_profile_title"
              android:layout_marginTop="78dip"
              android:layout_marginLeft="10dip"
              android:layout_toRightOf="@+id/txt_set3"
              android:layout_width="300dip"
          	  android:layout_height="wrap_content"
          	  android:text="2"
          	  android:numeric="signed"
     		  android:maxLength="1"
      		  android:lines="1"
          	  android:textSize="14sp"
          	  android:background="#00000000"
               />
  
               <ImageView
      android:id="@+id/img_today_profile_title"
      android:src="@drawable/setting_subtitle_04"
      android:layout_below="@+id/img_base_profile_bg"
      android:layout_marginTop="35dip"
      android:layout_marginLeft="10dip"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content">      
  </ImageView>
  
          <ImageView
      android:id="@+id/img_today_profile_bg"
      android:background="@drawable/set_profile_text"
      android:layout_below="@+id/img_today_profile_title"
      android:layout_marginTop="10dip"
      android:layout_marginLeft="10dip"
      android:paddingRight="10dip"
      android:layout_marginRight="10dip"
      android:layout_width="fill_parent"
      android:layout_height="30dip">      
  </ImageView>
  
          <ImageView
              android:id="@+id/img_today_profile_subtitle"
              android:src="@drawable/text_img_set_05"
              android:layout_below="@+id/img_today_profile_title"
              android:layout_marginLeft="10dip"
              android:layout_marginTop="9dip"
              android:layout_width="wrap_content"
      		  android:layout_height="wrap_content"
              />
  
                        <EditText 
              android:id="@+id/ edt_today_profile"
              android:layout_below="@+id/img_today_profile_title"
              android:layout_toRightOf="@+id/img_today_profile_subtitle"
              android:layout_marginTop="16dip"
              android:layout_marginLeft="10dip"
              android:layout_width="200dip"
          	  android:layout_height="wrap_content"
          	  android:text="오늘의 한마디는 이래요~"
          	  android:maxLength="20"
      		  android:lines="1"
          	  android:textSize="14sp"
          	  android:background="#00000000"
               />
  
     
</RelativeLayout>