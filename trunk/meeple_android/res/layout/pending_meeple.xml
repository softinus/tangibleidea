<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="fill_parent" 
    android:layout_height="fill_parent"
    android:background="@drawable/background">
  
	<RelativeLayout
	android:id="@+id/RelativeLayout01"
	android:layout_width="fill_parent"
	android:layout_height="wrap_content">
  
	  <ImageView
	  android:id="@+id/img_navigation_bg"
	  android:src="@drawable/navigation_bg"
	  android:layout_width="fill_parent" 
	  android:layout_height="wrap_content"
	  ></ImageView>
	  
	  <ImageView
	  android:id="@+id/img_navigation_title"
	  android:src="@drawable/navigation_title_01"
	  android:layout_width="fill_parent" 
	  android:layout_height="wrap_content"
	  ></ImageView>
	  
	  <Button
	  android:id="@+id/btn_refresh"
	  android:background="@drawable/button_refresh"
	  android:layout_marginLeft="10.7dip"
	  android:layout_marginTop="4dip"
	  android:layout_width="wrap_content" 
	  android:layout_height="wrap_content"
	  ></Button> 
	  
	  	  <Button
	  android:id="@+id/btn_waitnumber"
	  android:background="@drawable/button_waitnumber"
	  android:layout_marginLeft="250dip"
	  android:layout_marginTop="4dip"
	  android:layout_width="wrap_content" 
	  android:layout_height="wrap_content"
	  ></Button> 
   
  </RelativeLayout>
  
  <ListView android:id="@android:id/list"
        android:layout_width="fill_parent" 
        android:layout_height="wrap_content"
        android:cacheColorHint="#00000000"
        android:drawSelectorOnTop="false"
	    android:divider="#00ffffff"
	    android:listSelector="@drawable/selector"
	    />
  
</LinearLayout>