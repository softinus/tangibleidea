<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#E6E6E6"
    android:orientation="vertical" >
    
  <ImageView
      android:id="@+id/img_top"
      android:src="@drawable/label_setting_myprofile"
      android:layout_width="fill_parent"
      android:layout_height="wrap_content">      
  </ImageView>
  
    <ImageView
      android:id="@+id/img_profile_image"
      android:src="@drawable/no_profileimage"
      android:layout_below="@+id/img_top"
      android:layout_marginTop="10dip"
      android:layout_marginLeft="10dip"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content">      
  </ImageView>

        <ImageView
      android:id="@+id/img_profile_id"
      android:src="@drawable/setting_subtitle_01"
      android:layout_below="@+id/img_top"
      android:layout_toRightOf="@+id/img_profile_image"
      android:layout_marginTop="10dip"
      android:layout_marginLeft="10dip"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content">      
  </ImageView>
  
        
	<TextView
      android:id="@+id/txt_profile_id"
      android:layout_below="@+id/img_profile_id"
      android:text="AccountID"
      android:layout_toRightOf="@+id/img_profile_image"
      android:layout_marginTop="3dip"
      android:layout_marginLeft="10dip"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content">      
  </TextView>
  
	        <ImageView
      android:id="@+id/img_profile_email"
      android:src="@drawable/setting_subtitle_02"
      android:layout_below="@+id/txt_profile_id"
      android:layout_toRightOf="@+id/img_profile_image"
      android:layout_marginTop="10dip"
      android:layout_marginLeft="10dip"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content">      
  </ImageView>
 
 <TextView
      android:id="@+id/txt_profile_email"
      android:layout_below="@+id/img_profile_email"
      android:text="E-Mail"
      android:layout_toRightOf="@+id/img_profile_image"
      android:layout_marginTop="3dip"
      android:layout_marginLeft="10dip"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content">      
  </TextView>
  
     <ImageView
      android:id="@+id/img_base_profile_title"
      android:src="@drawable/setting_subtitle_03"
      android:layout_below="@+id/img_profile_image"
      android:layout_marginTop="10dip"
      android:layout_marginLeft="10dip"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content">      
  </ImageView>
  
          <ImageView
      android:id="@+id/img_base_profile_bg"
      android:src="@drawable/set_profile_text"
      android:layout_below="@+id/img_base_profile_title"
      android:layout_marginTop="10dip"
      android:layout_marginLeft="10dip"
      android:layout_width="300dip"
      android:layout_height="100dip">      
  </ImageView>
     
</RelativeLayout>