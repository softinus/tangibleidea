<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#E6E6E6"
    android:orientation="vertical" >
    
  <ImageView
      android:id="@+id/img_top"
      android:src="@drawable/label_setting_tip"
      android:layout_width="fill_parent"
      android:layout_height="wrap_content">      
  </ImageView>
  
    <ImageView
      android:id="@+id/img_tip_title"
      android:src="@drawable/text_img_tip"
      android:layout_centerHorizontal="true"
      android:layout_below="@+id/img_top"
      android:layout_marginTop="45dip"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content">      
  </ImageView>
  
  <ImageView
      android:id="@+id/img_tip_mentor"
      android:src="@drawable/btn_mentor_tip"
      android:layout_centerHorizontal="true"
      android:layout_below="@+id/img_tip_title"
      android:layout_marginTop="60dip"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content">      
  </ImageView>
  
    <ImageView
      android:id="@+id/img_tip_mentee"
      android:src="@drawable/btn_mentee_tip"
      android:layout_centerHorizontal="true"
      android:layout_below="@+id/img_tip_mentor"
      android:layout_marginTop="15dip"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content">      
  </ImageView>
    

</RelativeLayout>